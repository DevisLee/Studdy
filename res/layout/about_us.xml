<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#6cc5fa"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:padding="20dp"
            android:text="        欢迎使用Studdy掌上学习辅助软件，我们将尽心尽力去打造这款应用，如果有什么意见或者建议，还请在下面直接发送您的想法给我们，谢谢！"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#bb3e9ff8"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入昵称"
            android:singleLine="true"
            android:textColorHint="#aaffffff" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="top|left"
            android:hint="请输入您的意见或者建议"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:minLines="3"
            android:textColorHint="#aaffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_corner_click"
                android:text="提交" />

            <Button
                android:id="@+id/back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button_corner_click"
                android:text="返回" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>